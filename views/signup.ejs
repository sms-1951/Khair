    <div id="signup" class="card">
        <form action="/signup/register" method="post">
          <div class="container">
            <h1 class="card-title">Sign Up</h1>
            <p>Please fill this form to create an account.</p>
            <hr style="width: 60%; margin-left: 1rem;">
            <label for="email">Email</label>
            <input type="text" placeholder="Enter Email" id="email" name="email" required>
            <span id="emailError" class="text-danger"></span><br>
      
            <label for="name">Name</label>
            <input type="text" placeholder="Enter Name" id="name" name="name" required>
      
            <label for="address">Address</label>
            <input type="text" placeholder="Enter Address" id="address" name="address" required>
      
            <label for="phone">Phone Number</label>
            <input type="text" placeholder="Enter Phone Number" id="phone" name="phoneNumber" pattern="[0-9]{10}" required>
      
            <label for="pswd">Password</label>
            <input type="password" placeholder="Enter Password" id="pswd" name="password" required>

            <label for="pswdrepeat">Password</label>
            <input type="password" placeholder="Re-enter Password" id="pswdrepeat" name="passwordRepeat" required>
            <span id="pswdError" class="text-danger"></span><br>

            <p>Already have an account? <a href="/login">Login</a></p>
            <div class="clearfix">
              <button type="submit" class="signup sign-up-btn">Sign Up</button>
            </div>
          </div>
        </form>
      </div>
      <script>
        
  const signupForm = document.querySelector("#signup");
  signupForm.addEventListener("submit", validateSignup);

  //validation function
  function validateSignup(event) {
    let email = document.querySelector('#email');
    let emailError = document.querySelector('#emailError');
    let password = document.getElementById("pswd");
    let passwordRepeat = document.getElementById("pswdrepeat");
    let passwordError = document.getElementById("pswdError");

    const emailPattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
    // Clear red border and error message when user attempts again
    email.addEventListener('input', () => {
      email.style.border = '';
      emailError.textContent = '';
    });
    if (!emailPattern.test(email.value)) {
      emailError.innerHTML = 'Please enter a valid email address.';
      email.style.border = "2px solid red";
      event.preventDefault();
      return false;
    } else if (password !== passwordRepeat){
      passwordError.innerHTML = 'Passwords do not match.';
      password.style.border = "2px solid red";
      passwordRepeat.style.border = "2px solid red";
      event.preventDefault();
      return false;
    } else {
      return true;
    }
    //removing red border when selected again
    password.addEventListener('input', () => {
      password.style.border = '';
      passwordError.textContent = '';
    });

    passwordRepeat.addEventListener('input', () => {
      passwordRepeat.style.border = '';
      passwordError.textContent = '';
    });

  };

      </script>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <%-include("./partials/nav.ejs")%>
        <form method="POST" action="/donate">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Donation Order Details</h1>
                    <hr>
                    <div id="itemsDetails">
                        <h2>Which charity are you donating to?</h2>
                        <div id="selectCharity">
                        <label for="charitylist" class="form-label">Select your charity</label>
                        <select id="charitylist" name="selectedCharity" class="form-select">
                            <option selected disabled>Choose your charity</option>
                            <option value="etaam">Etaam</option>
                            <option value="albir">Albir</option>
                            <option value="nemah">Nemah</option>
                            <option value="ekram">Ekram</option>
                        </select>
                        </div>
                        <hr>
                        <div class="item-container">
                            <h2>Item:</h2>
                            <div class="row">
                                <div class="col-sm-6">
                                    <label for="categories" class="form-label">Item Type:</label>
                                    <select class="form-select" id="categories" name="itemType[]" required>
                                        <option value="Beans">Beans</option>
                                        <option value="Bread">Bread</option>
                                        <option value="Baked Goods">Baked Goods</option>
                                        <option value="Dessert">Dessert</option>
                                        <option value="Dairy">Dairy</option>
                                        <option value="Fruits">Fruits</option>
                                        <option value="Meat">Meat</option>
                                        <option value="Pasta">Pasta</option>
                                        <option value="Rice">Rice</option>
                                        <option value="Vegetables">Vegetables</option>
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <label for="#desc" class="form-label">Item Description:</label>
                                    <textarea class="form-control" name="itemDescription[]" style="width: 100%;" rows="1"
                                        id="desc"></textarea>
                                </div>
                            </div>
                            
                            <hr>
                        </div>
                        <div id="insertionPoint"></div>
                        <button class="btn btn-light" onclick="addItem()">
                            <i class="fa-solid fa-plus" style="color: #79915C; margin-right: 6px;"></i>Add item</button>

                        <script>
                            function addItem() {
                                // Select the element where you want to insert the HTML code
                                var element = document.getElementById("insertionPoint");

                                // Create the HTML code you want to insert
                                var htmlCode = `
                <div class="item-container">
                <h2>Item:</h2>
                <div class="row">
                    <div class="col-sm-6">
                     <label for="#categories" class="form-label">Item Type:</label>
                        <select class="form-select" id="categories"  name="itemType[]" required>
                            <option>Beans</option>
                            <option>Bread</option>
                            <option>Baked Goods</option>
                            <option>Dessert</option>
                            <option>Dairy</option>
                            <option>Fruits</option>
                            <option>Meat</option>
                            <option>Pasta</option>
                            <option>Rice</option>
                            <option>Vegetables</option>
                      </select>
                     </div>
                    <div class="col-sm-6">
                        <label for="#desc" class="form-label">Item Description:</label>
                        <textarea class="form-control" style="width: 100%;" rows="1" id="desc" name="itemDescription[]"></textarea>
                    </div>
                </div>
                
                <hr>
			`;
                                // Insert the HTML code into the selected element
                                element.insertAdjacentHTML("beforeend", htmlCode);
                            }
                        </script>
                        <div id="next">
                            <button type="button" id="nextbutton" class="nxtbtn">Next<i
                                    class="bi-arrow-right-short"></i></button>
                        </div>
                    </div>
                </div>
                <div id="deliveryDetails" class="item-container" style="display:none;">
                    <div id="pickup-form">
                        <h2>Schedule Pick Up:</h2>
                        <label for="pickup-date" class="form-label">Date:</label>
                        <input type="date" id="pickup-date" name="date" required>
                        <br>
                        <label for="pickup-time">Time:</label>
                        <input type="time" id="pickup-time" name="time" required>
                        <br>
                        <label for="address" class="form-label">Address:</label>
                        <input type="text" rows="1" id="address" name="address"
                            placeholder="Buliding No., Street, Neighbourhood" required>
                        <div class="google-maps">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1874980.0827988249!2d45.48585588381741!3d24.720272167433833!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2f03890d489399%3A0xba974d1c98e79fd5!2sRiyadh!5e0!3m2!1sen!2ssa!4v1681828196996!5m2!1sen!2ssa"
                                width="70%" height="250px" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                        <button id="pickupsubmitbtn" type="submit" class="btn">Submit Order</button>
                    </div>
                  </div>
            </div>
        </form>
        <%- include("./partials/footer.ejs")%>
            <script>
                //if next is clicked, delivery details would be shown with a default of pickup option
                var isNext = document.getElementById("nextbutton");
                var itemsDetails = document.getElementById("itemsDetails");
                var deliveryDetails = document.getElementById("deliveryDetails");
                isNext.addEventListener("click", function () {
                    itemsDetails.style.display = "none";
                    deliveryDetails.style.display = "block";
                });
            </script>

